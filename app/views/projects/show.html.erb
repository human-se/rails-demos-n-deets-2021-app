<h1>Project</h1>

<p>
  <strong>Title:</strong>
  <%= @project.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @project.description %>
</p>

<p class="mb-0">
  <strong>Employees:</strong>
</p>

<ul>
  <% @project.employees.each do |employee| %>
    <li><%= employee.full_name %></li>
  <% end %>
</ul>

<p>
  <%= link_to 'Edit', edit_project_path(@project), class: 'btn btn-primary' %>
</p>

<p>
  <%= link_to 'Back', projects_path, class: 'btn btn-sm btn-outline-secondary' %>
</p>
